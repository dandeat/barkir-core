<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dps_reference_list" model="ir.ui.view">
        <field name="name">dps.reference.list</field>
        <field name="model">dps.reference</field>
        <field name="arch" type="xml">
            <list default_order="kode_master, name">
                <field name="name"/>
                <field name="uraian"/>
                <field name="kode_master"/>
                <field name="master_category_name"/>
                <field name="active" widget="boolean_toggle" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="dps_reference_form" model="ir.ui.view">
        <field name="name">dps.reference.form</field>
        <field name="model">dps.reference</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <field name="uraian"/>
                        <field name="kode_master"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="dps_reference_search" model="ir.ui.view">
        <field name="name">dps.reference.search</field>
        <field name="model">dps.reference</field>
        <field name="arch" type="xml">
            <search string="Search References">
                <field name="name"/>
                <field name="uraian"/>
                <field name="kode_master"/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Master Reference Actions -->
