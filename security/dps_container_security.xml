<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Module Category for Container Management -->
        <record id="module_category_dps_container" model="ir.module.category">
            <field name="name">Container Management</field>
            <field name="description">User access levels for the Container module.</field>
            <field name="sequence">11</field>
        </record>

        <!-- User Group -->
        <record id="group_container_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_dps_container"/>
        </record>

        <!-- Manager Group (inherits from User) -->
        <record id="group_container_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_dps_container"/>
            <field name="implied_ids" eval="[(4, ref('group_container_user'))]"/>
        </record>
    </data>
</odoo>
